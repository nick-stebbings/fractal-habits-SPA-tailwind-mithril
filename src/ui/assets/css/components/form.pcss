form {
  @apply w-full flex flex-col items-center;
}

.input-container {
  @apply xl:w-3/4 w-full mt-4 text-xl;
}

#modal input[type="text"], input[type="date"] {
  @apply focus:ring-balance-secondary focus:border-balance-secondary sm:text-sm focus:outline-none px-4 py-2 text-gray-600 border border-gray-300 rounded-md mb-2;
}